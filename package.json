{
    "name": "synctube",
    "version": "0.0.0",
    "description": "Realtime web video synchronization.",
    "author": "Henry Merriam <henry@zephyrhosting.net>",
    "dependencies": {
        "domready": "^1.0.7",
        "knockout": "^3.3.0",
        "moment": "^2.5.1",
        "moment-duration-format": "^1.3.0",
        "moment-interval": "^0.2.1",
        "mu2": "^0.5.20",
        "request": "^2.53.0",
        "safesocket": "^1.0.0",
        "socket.io": "^1.3.5",
        "socket.io-client": "^1.3.5",
        "express": "^3.4.8"
    },
    "devDependencies": {
        "bower": "^1.2.8",
        "browserify": "^9.0.8",
        "browserify-shim": "^3.8.5",
        "exorcist": "^0.3.0",
        "less": "^2.5.0",
        "less-plugin-clean-css": "^1.5.0",
        "uglify-js": "^2.4.20",
        "grunt-concurrent": "^0.4.3",
        "grunt-contrib-watch": "^0.4.4",
        "grunt-cli": "^0.1.13",
        "grunt-nodemon": "^0.2.1",
        "grunt": "^0.4.5"
    },
    "browserify": {
        "transform": [
            "browserify-shim"
        ]
    },
    "browserify-shim": {
        "jquery": "global:$",
        "knockout": "global:ko",
        "socket.io-client": "global:io"
    },
    "scripts": {
        "build": "npm run build:css && npm run build:js && npm run build:min",
        "build:css": "lessc --include-path=less;bower_components --clean-css less/main.less static/style.css",
        "build:js": "browserify client/main.js --debug | exorcist static/main.js.map > static/main.js",
        "build:min": "uglifyjs static/main.js -m -c --source-map static/main.min.js.map --in-source-map static/main.js.map --source-map-url main.min.js.map > static/main.min.js",
        "postinstall": "bower install"
    },
    "engines": { "node": "0.10.x" },
    "private": true
}
