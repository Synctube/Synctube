{
    "name": "synctube",
    "version": "0.2.4",
    "description": "Realtime web video synchronization.",
    "author": "Henry Merriam <henry@zephyrhosting.net>",
    "main": "server",
    "dependencies": {
        "async": "^1.4.2",
        "bower": "^1.2.8",
        "browserify": "^9.0.8",
        "browserify-shim": "^3.8.5",
        "browser-request": "^0.3.3",
        "consolidate": "^0.13.1",
        "dustjs-linkedin": "^2.7.2",
        "domready": "^1.0.7",
        "moment": "^2.5.1",
        "moment-duration-format": "^1.3.0",
        "moment-interval": "^0.2.1",
        "node-sass": "^3.8.0",
        "redis": "^1.0.0",
        "redis-scripto": "^0.1.3",
        "redis-url": "^1.2.1",
        "request": "^2.53.0",
        "safesocket": "^1.0.0",
        "socket.io": "^1.3.5",
        "uglify-js": "^2.4.20",
        "videojs-youtube": "^2.0.0",
        "express": "^4.13.3"
    },
    "devDependencies": {
        "nodemon": "^1.3.7",
        "parallelshell": "^1.1.1",
        "watch": "^0.16.0"
    },
    "browserify": {
        "transform": [
            "browserify-shim"
        ]
    },
    "browser": {
        "./config.js": "./client/config.js",
        "request": "browser-request"
    },
    "browserify-shim": {
        "jquery": "global:$",
        "knockout": "global:ko",
        "videojs": "global:videojs",
        "socket.io-client": "global:io"
    },
    "cacheDirectories": ["node_modules", "bower_components"],
    "scripts": {
        "start": "node .",
        "build": "npm run build:css && npm run build:js && npm run build:min",
        "build:css": "node-sass --include-path bower_components --output-style compressed --source-map static/style.css.map --source-map-contents --source-map-root static/ style/main.scss static/style.css",
        "build:js": "npm run build:js:browse && npm run build:js:room",
        "build:js:browse": "browserify client/browse.js --debug > static/browse.js",
        "build:js:room": "browserify client/room.js --debug > static/room.js",
        "build:min": "npm run build:min:browse && npm run build:min:room",
        "build:min:browse": "uglifyjs static/browse.js -m -c --source-map-include-sources --source-map static/browse.min.js.map --source-map-url browse.min.js.map > static/browse.min.js",
        "build:min:room": "uglifyjs static/room.js -m -c --source-map-include-sources --source-map static/room.min.js.map --source-map-url room.min.js.map > static/room.min.js",
        "watch": "parallelshell \"npm run watch:css\" \"npm run watch:js\"",
        "watch:css": "watch \"npm run build:css\" less/",
        "watch:js": "watch \"npm run build:js && npm run build:min\" lib/ client/",
        "nodemon": "nodemon --watch lib --watch server --watch server.js --watch template --ext js,html server.js",
        "dev": "parallelshell \"npm run watch\" \"npm run nodemon\"",
        "postinstall": "bower install && npm run build"
    },
    "engines": { "node": "^5.6.0" },
    "private": true
}
